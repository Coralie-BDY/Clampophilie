{% extends 'base.html.twig' %}

{% block title %}Clampophilie - S'inscrire{% endblock %}

{% block content %}
    <h1>Inscription</h1>

    {% if notification %}
        <div class="alert alert-info">{{ notification }}</div>
    {% endif %}

    <div class="row text-center">
        <div class="col-sm-10 col-md-10 col-lg-10 mx-auto">
            <div class="card card-signin my-5">
                <div class="card-body">
                    <h5 class="card-title text-center">Inscription</h5>


                    {{ form_start(form) }}
                    <div class=" offset-md-2 col-md-8 offset-md-2 mt-5">{{ form_row(form.firstname) }}</div>
                    <div class=" offset-md-2 col-md-8 offset-md-2">{{ form_row(form.lastname) }}</div>
                    <div class=" offset-md-2 col-md-8 offset-md-2">{{ form_row(form.email) }}</div>
                    <div class=" offset-md-2 col-md-8 offset-md-2">{{ form_row(form.password) }}</div>
                    <div class=" offset-md-2 col-md-8 offset-md-2">{{ form_row(form.cgv) }}</div>
                    {{ form_end(form) }}

                </div>
            </div>
        </div>
    </div>

{% endblock %}
