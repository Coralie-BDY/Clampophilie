{% extends 'base.html.twig' %}

{% block title %}Clampophilie - Nos produits {% endblock %}

{% block content %}
    <div class="row">
        <div class="col-md-3">
            <h2>Filtrer</h2>
            {{ form(form) }}
        </div>
        <div class="col-md-9">
            <h2>Nos produits </h2>
            <div class="row mt-5">
                {% for product in products %}

                    <div class="card mr-4 mb-4" style="width: 10rem;">
                        <img class="card-img-top" src="/uploads/{{ product.image }}" alt="{{ product.name }}">
                        <div class="card-body">
                            <h5 class="card-title">{{ product.name }}</h5>
                            <p class="card-text">{{ product.subtitle }}</p>
                            <p class="card-text">{{ (product.price / 100)|number_format(2, ',', '.')}}â‚¬</p>
                            <a href="{{ path('product', {'slug' : product.slug}) }}" class="btn btn-primary">voir plus</a>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    </div>

{% endblock %}
