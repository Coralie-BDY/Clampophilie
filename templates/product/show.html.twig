{% extends 'base.html.twig' %}

{% block content %}

    <div class="row mb-5">
        <div class="col-md-5 hover">
            <figure>
                <img src="/uploads/{{ product.image }}" alt="{{ product.name }}" class="img-fluid">
            </figure>
        </div>
        <div class="col-md-7 my-auto">
            <h3>{{ product.name }}</h3>
            <p>{{ product.subtitle }}</p>
            <span class="product-page-price">{{ (product.price / 100)|number_format(2, ',', '.') }} â‚¬</span>
            <hr>
            <h6 class="font-italic mt-3 ">Description</h6>
            <p class="mt-3 text-justify">
                {{ product.description }}
            </p>
            <hr>
            <a href="{{ path('add_to_cart', {'id' : product.id }) }}" class="btn btn-block mt-3">Ajouter au panier</a>
        </div>
    </div>
    <hr>
    <h3 class="text-center mb-2">Nos meilleurs ventes</h3>
    <div class="row">
        {% for product in products %}
            <div class="col-md-3 mb-5">
                {% include 'product/card_product.html.twig' %}
            </div>
        {% endfor %}
    </div><!-- /.row -->




{% endblock %}

{% block title %}
    Clampophilie - {{ product.name }}
{% endblock %}

